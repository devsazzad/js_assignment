
// Problem 1: Write a function to calculate the area of a triangle.
function Triangle(base, height) {
    if (base <= 0 || height <= 0) {
      return "Please input Valid number";
    }
  
    const area = (base * height) / 2;
    return area;
  }
  
  const base = 5;
  const height = 8;
  const triangle = Triangle(base, height);
//   console.log(triangle);
 

// Problem 2: Write a function to convert degrees to radians.

function detore(degrees) {
    return degrees * (Math.PI / 180);
  }
  
  
  const degrees = 90;
  const radians = detore(90);
//  console.log(radians);


// Problem 3: Create a function calculateFactorial that takes a number and returns its factorial.

function cFactorial(number) {
    if (number === 0 || number === 1) {
      return 1;
    } else {
      let factorial = 1;
      for (let i = 2; i <= number; i++) {
        factorial = factorial * i;
      }
      return factorial;
    }
  }
  
//   console.log(cFactorial(5));


  
